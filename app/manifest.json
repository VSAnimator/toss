{
  "name": "Summarize Me",
  "author": "Samuel Lam",
  "version": "0.0.1",
  "offline_enabled": true,
  "manifest_version": 2,
  "description": "An extension that summarizes a web page or selected text.",
  "icons": {
    "16": "images/summarize-16.png",
    "128": "images/summarize-icon.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "scripts/contentscript.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "omnibox": {
    "keyword": "OMNIBOX-KEYWORD"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/summarize-16.png",
      "38": "images/summarize-icon.png"
    },
    "default_title": "Summarize-Me",
    "default_popup": "popup.html"
  }
}
